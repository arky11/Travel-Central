<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-md-4">
      <%= image_tag(@profile.picture, class: 'img-responsive') %>
      <h1><%= @profile.first_name %> <%= @profile.last_name %></h1>
      <h1><%= @profile.occupation %></h1>
      <h1><%= @profile.age %></h1>
      <h1><%= @profile.favourite_places %></h1>
      <h3><%= @profile.bio %></h3>
    </div>
    <div class="col-md-6">
      <%= link_to 'Add Album', new_album_path, class: 'btn btn-primary' %>
      <%= link_to 'Add Image', new_album_image_path, class: 'btn btn-warning' %>
      <h3>Albums</h3>
      <% @albums.each do |album| %>
        <h4><%= link_to album.title, album_path(album) %></h4>
      <% end %>

  </div>
</div>
  <% if @profile == current_user.profile %>
    <%= link_to 'Edit', edit_profile_path(@profile) %> |
  <% end %>

  <%= link_to 'Back', profiles_path %>
</div>